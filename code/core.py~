#! /usr/bin/env python
# -*- coding: utf-8 -*
import gtk
import sys


class Base:
    def closewindow(self, widget):
        sys.exit()

    def __init__(self):
        self.window = gtk.Window()
        self.window.set_size_request(300, 300)
        self.window.connect("destroy", self.closewindow)
        self.fixed = gtk.Fixed()
        self.file1content = gtk.TextView()
        self.file1content.set_size_request(200, 20)
        self.fixed.put(self.file1content, 10, 10)
        self.file1content.get_buffer().set_text(u"ബാലശങ്കർ  ")
        self.window.add(self.fixed)
        self.window.show()
        self.window.show_all()

    def main(self):
        gtk.main()

if __name__ == "__main__":
    base = Base()
    base.main()
